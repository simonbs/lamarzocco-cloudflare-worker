{
  "name": "lamarzocco-cloudflare-worker",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "cloudflare": {
    "bindings": {
      "KV": {
        "description": "KV namespace used to cache installation keys and auth tokens."
      },
      "LM_EMAIL": {
        "description": "La Marzocco app email address."
      },
      "LM_PASSWORD": {
        "description": "La Marzocco app password."
      },
      "LM_MACHINE_ID": {
        "description": "Optional machine serial number (required for accounts with multiple machines)."
      },
      "LM_TIMEZONE": {
        "description": "Optional IANA timezone for period windows (default: UTC)."
      },
      "LM_LAST_COFFEE_DAYS": {
        "description": "Optional lookback days for recent espressos (default: 365)."
      },
      "ENABLE_SWAGGER": {
        "description": "Optional flag (`true`) to expose `/openapi.json` and `/docs`."
      }
    }
  },
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "lint": "eslint . --max-warnings=0",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "hono": "^4.6.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250129.0",
    "@eslint/js": "^9.19.0",
    "eslint": "^9.19.0",
    "globals": "^15.12.0",
    "typescript": "^5.4.5",
    "typescript-eslint": "^8.26.1",
    "vitest": "^4.0.18",
    "workerd": "^1.20250205.0",
    "wrangler": "^4.60.0"
  }
}
